<Window x:Class="EasyWord.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWord"
        mc:Ignorable="d"
        Title="Informationen"
        Height="150"
        Width="280"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Icon="Resources/info.ico"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Margin="5"
                   TextAlignment="Center"
                   VerticalAlignment="Top">
            <Run Text="EasyWord" />
        <LineBreak />
        <Run Text="Erstellt von Leon, Lenny, Simon und Alexander" />
        </TextBlock>

        <TextBlock Margin="5"
                   TextAlignment="Center"
                   VerticalAlignment="Bottom">
            <Run Text="Version 1.0"
                 FontStyle="Italic" />
        <LineBreak />
        <Run Text="Copyright @ 2023 EasyWord"
             FontStyle="Italic" />
        </TextBlock>
    </Grid>
</Window>
